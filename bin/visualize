#!/usr/bin/env ruby

full_bin_path = File.expand_path("#{Dir.pwd}/#{$PROGRAM_NAME}")
dist_path = File.expand_path(File.dirname(full_bin_path) + '/..')

$LOAD_PATH << "#{dist_path}/lib"
$LOAD_PATH << "#{dist_path}/../kaitai-structures"
$LOAD_PATH << "#{dist_path}/../kaitai_struct/runtime/ruby"

require 'ks/visualizer_main'

if ARGV.size != 2
  puts "Usage: #{File.basename($PROGRAM_NAME)} <format.yaml> <file_to_parse.bin>"
  exit 1
end

v = ExternalCompilerVisualizer.new(ARGV[0], ARGV[1])
v.run
